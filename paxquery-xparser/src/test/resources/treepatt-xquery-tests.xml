<?xml version="1.0" encoding="UTF-8"?>

<tests>
		<test>
			<value>let $i := collection('items') return $i</value>
			<output>PT:root---HM:{$i=root}</output>
		</test>
		<test>
			<value>let $i := collection(&quot;items&quot;)/a return $i</value>
			<output>PT:root/aC---HM:{$i=aC}</output>
		</test>
		<test>
			<value>let $i := collection('items')//a return $i</value>
			<output>PT:root//aC---HM:{$i=aC}</output>
		</test>
		<test>
			<value>let $i := collection(&quot;items&quot;)/@a return $i</value>
			<output>PT:root/@a---HM:{$i=@a}</output>
		</test>
		<test>
			<value>let $i := doc(&quot;items&quot;) return $i</value>
			<output>PT:root---HM:{$i=root}</output>
		</test>
		<test>
			<value>let $i := doc('items')/a return $i</value>
			<output>PT:root/aC---HM:{$i=aC}</output>
		</test>
