			<output>PT:root//aC---HM:{$i=aC}</output>
		</test>
		<test>
			<value>let $i := doc('items')/@a return $i</value>
			<output>PT:root/@a---HM:{$i=@a}</output>
		</test>
		<test>
			<value>let $ic := collection('items') let $i := $ic/site/regions//item return $i</value>
			<output>PT:root/site/regions//itemC---HM:{$i=itemC,$ic=root}</output>
		</test>
